{
  "openapi": "3.0.0",
  "info": {
    "title": "RFG1-OPTIMISM",
    "description": "RFG1 OPTIMISM",
    "version": "1.0.0"
  },
  "paths": {
    "/api-docs": {
      "get": {
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/info": {
      "get": {
        "description": "Healthcheck endpoint",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/{address}/balance": {
      "get": {
        "description": "Gets current balance of wallet",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Address to search"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              }
            }
          }
        }
      }
    },
    "/{address}/balance/block/{blockNumber}": {
      "get": {
        "description": "Gets balance of wallet at specific block",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Address to search"
          },
          {
            "name": "blockNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Block to search"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              }
            }
          }
        }
      }
    },
    "/{address}/balance/date/{date}": {
      "get": {
        "description": "Gets balance of wallet near date",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Address to search"
          },
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Date to search (YYYY-MM-DDThh:mm:ss)"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              }
            }
          }
        }
      }
    },
    "/{address}/query": {
      "put": {
        "description": "Queries `view function` of specified contract",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Address of the contract"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryContractResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/QueryContractResponse"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryContractRequest"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/QueryContractRequest"
              }
            }
          }
        }
      }
    },
    "/{address}/queryKnownABI": {
      "put": {
        "description": "Queries `view function` of specified contract",
        "parameters": [
          {
            "name": "address",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Address of the contract"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryContractResponse"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/QueryContractResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryContractRequest"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/QueryContractRequest"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BalanceResponse": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "description": "Address that was queried",
            "example": "0xA1673f6ec41cE19814B412bC633D59e4119eCD17"
          },
          "balance": {
            "type": "string",
            "description": "Balance that was queried",
            "example": "8901123"
          }
        }
      },
      "QueryContractRequest": {
        "type": "object",
        "properties": {
          "function": {
            "type": "string",
            "description": "Name of the function to call",
            "example": "balanceOf"
          },
          "abi": {
            "description": "Accepts a human readable ABI or a JSON ABI",
            "oneOf": [
              {
                "$ref": "#/components/schemas/HumanReadableAbi"
              },
              {
                "$ref": "#/components/schemas/JSONAbi"
              }
            ]
          },
          "params": {
            "type": "object",
            "description": "Neccesary parameters for the function",
            "example": {
              "balanceOf": "0x0"
            }
          },
          "blockTag": {
            "type": "number",
            "description": "BlockTag number for when to query the function",
            "example": 4312
          },
          "blockDate": {
            "type": "string",
            "description": "Date for when to query the function",
            "example": "2023-09-01T15:03:23"
          }
        },
        "required": [
          "function",
          "abi"
        ]
      },
      "HumanReadableAbi": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "example": [
          "function balanceOf(address account) view returns (uint256)"
        ]
      },
      "JSONAbi": {
        "type": "object",
        "example": {
          "inputs": [
            {
              "internalType": "address",
              "name": "account",
              "type": "address"
            }
          ],
          "name": "balanceOf",
          "outputs": [
            {
              "internalType": "uint256",
              "name": "",
              "type": "uint256"
            }
          ],
          "stateMutability": "view",
          "type": "function"
        }
      },
      "QueryContractResponse": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string",
            "description": "Function response",
            "example": "0"
          }
        }
      }
    }
  }
}